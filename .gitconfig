[user]
	name = Wang Xu
	email = xu.wang@qiyi.com

[color]
	diff = auto
        status = auto
        branch = auto
[alias]
	st = status
        ci = commit
        co = checkout
        br = branch
	d = difftool
        mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
[core]
	editor = vim
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[push]
	default = matching
